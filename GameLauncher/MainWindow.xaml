<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        ContentRendered="Window_ContentRenderer"
        Title="GameLauncher" Height="617" Width="1080">
    <Grid>
        <Image Stretch="UniformToFill" Source="images/LauncherBackground.png" HorizontalAlignment="Right"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="Black" Margin="0, 0, 5, 0"/>
        <Button Name="PlayButton" Content="Checking for Updates" Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" Foreground="#CCFFFFFF" Margin="0, 0, 0, 15" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="150" Background="#99000000" Padding="10,1" BorderBrush="#00707070"/>
    </Grid>
</Window>
